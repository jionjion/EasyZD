{
  "manifest_version": 3,
  "name": "EasyZD",
  "version": "3.1.2",
  "author": "Jion",
  "description": "简单的查询功能,将中文或者英文进行翻译,并支持划词操作哦 (*￣ω￣)!...",
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://openapi.youdao.com/*"
  ],
  "options_page": "page/options.html",
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "css": [
        "css/selection.css",
        "css/selection.css"
      ],
      "js": [
        "js/selection.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_title": "翻译",
    "default_popup": "page/popup.html",
    "default_icon": {
      "16": "icon/icon16.png",
      "48": "icon/icon48.png"
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "MacCtrl+Shift+T"
      }
    }
  },
  "homepage_url": "https://github.com/jionjion/EasyZD"
}
